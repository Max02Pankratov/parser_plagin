{
  "manifest_version": 2,
  "name": "Копировать HTML",
  "version": "1.0",
  "description": "Плагин для копирования HTML-кода страницы",
  "permissions": [
    "clipboardWrite",
    "*://*.hh.ru/*"
  ],
  "background": {
    "scripts": [
      "content.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.hh.ru/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
